{
    "name": "rafu-zimmer/shopware",
    "type": "project",
    "license": "MIT",
    "config": {
        "optimize-autoloader": true,
        "platform": {
            "php": "8.2"
        },
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "pickware/dependency-loader": true,
            "cweagans/composer-patches": true,
            "symfony/runtime": true,
            "symfony/flex": true,
            "php-http/discovery": true
        }
    },
    "prefer-stable": true,
    "minimum-stability": "stable",
    "scripts": {
        "pre-install-cmd": [
            "[ ! -f vendor/autoload.php ] || $PHP_BINARY bin/console system:update:prepare"
        ],
        "pre-update-cmd": [
            "[ ! -f vendor/autoload.php ] || $PHP_BINARY bin/console system:update:prepare"
        ],
        "post-install-cmd": [
            "[ ! -f vendor/autoload.php ] || $PHP_BINARY bin/console system:update:finish"
        ],
        "post-update-cmd": [
            "[ ! -f vendor/autoload.php ] || $PHP_BINARY bin/console system:update:finish"
        ],
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        }
    },
    "repositories": {
        "shopware-packages": {
            "type": "composer",
            "url": "https://packages.shopware.com"
        },
        "rafu/project-jupiter": {
            "type": "vcs",
            "url": "git@bitbucket.org:rafu-zimmer/projectjupiter.git"
        },
        "0": {
            "type": "path",
            "url": "custom/plugins/*",
            "options": {
                "symlink": true
            }
        },
        "1": {
            "type": "path",
            "url": "custom/plugins/*/packages/*",
            "options": {
                "symlink": true
            }
        },
        "2": {
            "type": "path",
            "url": "custom/static-plugins/*",
            "options": {
                "symlink": true
            }
        }
    },
    "require": {
        "php": "^8.2",
        "composer-runtime-api": "^2.0",
        "cweagans/composer-patches": "^1.7",
        "moorl/forms": "~1.5.4",
        "rafu/project-jupiter": "~2.0.0",
        "shopware/administration": "~v6.5.0",
        "shopware/core": "~v6.5.0",
        "shopware/elasticsearch": "~v6.5.0",
        "shopware/storefront": "~v6.5.0",
        "symfony/flex": "~2",
        "symfony/runtime": "^5.0|^6.0"
    },
    "extra": {
        "patches": {
            "shopware/core": [
                "patches/shopware-core-defaults-php.patch"
            ],
            "shopware/administration": [
                "patches/shopware-administration-resources-app-administration-src-core-shopware-ts.patch",
                "patches/shopware-administration-component-sw-media-quickinfo.patch"
            ]
        }
    },
    "require-dev": {
        "symfony/web-profiler-bundle": "^6.3"
    }
}
